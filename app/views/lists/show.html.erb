<div class="container">
  <h1>
    <%= @list.name %>
    <%= link_to new_list_bookmark_path(@list) do %>
      <i class="fa-solid fa-plus" style="color: #B197FC;"></i>
    <% end %>
  </h1>
  <div class="movie-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-movie">
        <img src=<%="#{bookmark.movie.poster_url}"%> />
        <div class="p-3">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
        </div>
        <div class="p-3">
          <h2> <%= bookmark.movie.rating %> <i class="fa-solid fa-star"></i></h2>
          <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?" } do %>
            <i class="fa-solid fa-trash-can" style="color: #B197FC;"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Back to Lists", lists_path %>
</div>
